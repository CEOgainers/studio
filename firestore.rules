rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // Any authenticated user can read any user's profile (role, name, etc.)
      // This is safe and necessary for role-based rules to work.
      allow read: if request.auth != null;
      
      // A user can only create or update their OWN document.
      allow write: if request.auth.uid == userId;
    }

    match /services/{serviceId} {
      // Anyone can read the list of services (for the landing page).
      allow read: if true;
      
      // Only users whose own user document has role == 'Admin' can write.
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    match /payments/{paymentId} {
      // Only admins can read all payment submissions.
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
      
      // Any authenticated user can create a payment document.
      allow create: if request.auth != null;
    }
  }
}
