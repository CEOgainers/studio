rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to create and read their own user document
    match /users/{userId} {
      // A user can create their own document if the document ID matches their user ID
      allow create: if request.auth != null && request.auth.uid == userId;
      // A user can read their own document if they are logged in and their ID matches
      allow read: if request.auth != null && request.auth.uid == userId;
    }
  }
}
